	file = {:home/razvan/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Sandu-Popa, Marius Drăghici, Adriana Deaconescu, Răzvan Țăpuș - 2010 - A Peer-to-Peer Swarm Creation and Management Framework.pdf:pdf},
	keywords = {BitTorrent,Measurements,P2P-Systems,framework,swarm management,virtualization},
